<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
            http://www.springframework.org/schema/beans 
            http://www.springframework.org/schema/beans/spring-beans-4.2.xsd">


	<!-- 实例化bean FSU状态统计 1小时执行1次-->
	<bean id="oneTask" class="com.good.task01.job.JobOne" >
		<property name="hours" value="9,12,15,18" ></property>
	</bean>


	<!-- 配置MethodInvokingJobDetailFactoryBean -->
	<bean id="oneTaskMethod" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="oneTask" />
		<property name="targetMethod" value="run" />
		<property name="concurrent" value="false" />
	</bean>

	<!-- 配置定时表达式 -->
	<bean id="oneTaskTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail" ref="oneTaskMethod" />
		<!-- 1小时执行1次 -->
		<property name="cronExpression" value="0 10 9,12,15,18 * * ?" />
	</bean>

	<!-- 配置定时表达式 -->
	<bean id="oneTaskTriggerSo" class="org.springframework.scheduling.quartz.SimpleTriggerFactoryBean">
		<property name="jobDetail" ref="oneTaskMethod" />
		<property name="startDelay" value="3000" /><!-- 调度工厂实例化后，经过5秒开始执行调度 -->
		<property name="repeatInterval" value="100002000" /><!-- 每2秒调度一次 -->

	</bean>

	<!-- 配置调度工厂 -->
	<bean id="schedulerFactoryBean"
		  class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<ref bean="oneTaskTrigger" />
			</list>
		</property>
	</bean>
</beans>
